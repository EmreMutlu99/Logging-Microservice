datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

enum LogLevel {
  DEBUG
  INFO
  WARNING
  ERROR
  CRITICAL
}

model Services {
  service_id   Int    @id @default(autoincrement())
  service_name String @unique
  is_active    Boolean @default(true)

  logs         Log[]
}

model Log {
  log_id        Int       @id @default(autoincrement())
  user_id       Int
  log_level     LogLevel
  message       String?
  log_timestamp DateTime @default(now())
  service       Services  @relation(fields: [service_id], references: [service_id])
  service_id    Int
}
